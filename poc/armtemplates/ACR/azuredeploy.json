{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "acrName": {
            "type": "string",
            "metadata": {
                "description": "Azure Container Registry Name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure Container Registry Location."
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "Azure Container Registry SKU."
            }
        },
        "adminUserEnabled": {
            "type": "bool",
            "metadata": {
                "description": "Enable admin user."
            }
        },
        "policies": {
            "type": "array",
            "metadata": {
                "description": "Azure Container Registry policies."
            }
        },
        "enableReplication": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable geo-redundancy replication."
            }
        },
        "geoRedundancyLocation": {
            "type": "string",
            "metadata": {
                "description": "Geo-redundancy replication location."
            }
        },
        "diagnosticStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Diagnostic storage accounnt name."
            }
        },
        "diagnosticStorageAccountResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Diagnostics storage account resource group."
            }
        },
        "logAnalyticsWorkspaceName": {
            "type": "string",
            "metadata": {
                "description": "Log analytics workspace name."
            }
        },
        "logAnalyticsSubscriptionID": {
            "type": "string",
            "metadata": {
                "description": "Log analytics subscription Id."
            }
        },
        "logAnalyticsResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Log analytics workspace resource group."
            }
        }
    },
    "variables": {
        "diagnosticRetentionInDays": 30
    },
    "resources": [
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-12-01-preview",
            "name": "[parameters('acrName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "properties": {
                "adminUserEnabled": "[parameters('adminUserEnabled')]",
                "policies": "[parameters('policies')]"
            }
        },
        {
            "condition": "[parameters('enableReplication')]",
            "type": "Microsoft.ContainerRegistry/registries/replications",
            "apiVersion": "2019-12-01-preview",
            "name": "[concat(parameters('acrName'), '/', parameters('geoRedundancyLocation'))]",
            "location": "[parameters('geoRedundancyLocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
            ],
            "properties": {
            }
        },

        {
            "type": "Microsoft.ContainerRegistry/registries/providers/diagnosticSettings",
            "name": "[concat(parameters('acrName'), '/Microsoft.Insights/', parameters('acrName'), '-dgs')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
            ],
            "apiVersion": "2017-05-01-preview",
            "properties": {
                "name": "[concat(parameters('acrName'), '-dgs')]",
                "storageAccountId": "[resourceId(parameters('diagnosticStorageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('diagnosticStorageAccountName'))]",
                "workspaceId": "[resourceId(parameters('logAnalyticsSubscriptionID'), parameters('logAnalyticsResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
                "logs": [
                    {
                        "category": "ContainerRegistryRepositoryEvents",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": "[variables('diagnosticRetentionInDays')]",
                            "enabled": true
                        }
                    },
                    {
                        "category": "ContainerRegistryLoginEvents",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": "[variables('diagnosticRetentionInDays')]",
                            "enabled": true
                        }
                    }
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": true,
                            "days": "[variables('diagnosticRetentionInDays')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.ContainerRegistry/registries/providers/locks",
            "name": "[concat(parameters('acrName'), '/Microsoft.Authorization/', parameters('acrName'), '-lck')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
            ],
            "apiVersion": "2017-04-01",
            "properties": {
                "level": "CannotDelete"
            }
        }
    ],
    "outputs": {
    }
}
