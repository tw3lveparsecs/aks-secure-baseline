{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Private endpoint location."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "Virutal network name."
            }
        },
        "vnetResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Virtual network resource group."
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name."
            }
        },
        "privateEndpointResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource Id of the resource you're connecting to."
            }
        },
        "targetSubResource": {
            "type": "array",
            "metadata": {
                "description": "Sub resource type."
            }
        },
        "privateDnsZone": {
            "type": "string",
            "metadata": {
                "description": "Private dns zone to use to connect to resource."
            }
        },
        "privateDnsResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Private dns zone resource group."
            }
        }
    },
    "variables": {
        "privateEndpointArray": "[split(parameters('privateEndpointResourceId'), '/')]",
        "privateEndpointName": "[concat(variables('privateEndpointArray')[sub(length(variables('privateEndpointArray')),1)], '-pep01')]"
    },
    "resources": [
        {
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/privateEndpoints",
            "name": "[variables('privateEndpointName')]",
            "location": "[parameters('location')]",
            "properties": {
                "subnet": {
                    "id": "[resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[parameters('privateEndpointResourceId')]",
                            "groupIds": "[parameters('targetSubResource')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-03-01",
            "name": "[concat(variables('privateEndpointName'), '/', parameters('privateDnsZone'), '-grp' )]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints/', variables('privateEndpointName'))]"
            ],
            "properties": {
                "privateDnsZoneConfigs": [
                    {
                        "name": "config1",
                        "properties": {
                            "privateDnsZoneId": "[resourceId(parameters('privateDnsResourceGroup'), 'Microsoft.Network/privateDnsZones', parameters('privateDnsZone'))]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2020-01-01",
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "name": "[concat(parameters('privateDnsZone'), '/', parameters('virtualNetworkName'), '-lnk')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints/', variables('privateEndpointName'))]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
                },
                "registrationEnabled": false
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints/providers/locks",
            "name": "[concat(variables('privateEndpointName'), '/Microsoft.Authorization/', variables('privateEndpointName'), '-lck')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints/', variables('privateEndpointName'))]"
            ],
            "apiVersion": "2017-04-01",
            "properties": {
                "level": "CannotDelete"
            }
        }

    ],
    "outputs": {
    }
}
